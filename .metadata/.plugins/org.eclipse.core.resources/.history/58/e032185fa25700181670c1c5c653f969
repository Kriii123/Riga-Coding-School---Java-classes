
public class Game {

	Player humanPlayer;
	Player computerPlayer;
	Board board;
	
	public Game() {
		
		board = new Board();
		humanPlayer = new HumanPlayer(board);
		computerPlayer = new ComputerPlayer(board);
		
	}
	
	public void playGame() {
		board.printGameBoard();
		
		while(gameStatus() == GameStatus.GAME_ONGOING) {
			int[] rowandCol0 = humanPlayer.makeMove();
			board.makeMove("X", rowandCol0[0], rowandCol0[1]);
			board.printGameBoard();
			int[] rowandCol1 = computerPlayer.makeMove();
			board.makeMove("O", rowandCol1[0], rowandCol1[1]);
			board.printGameBoard();
			break;
		}
		switch(gameStatus()) {
			case PLAYER_1_WINS:
				System.out.println("Congrats, you won!");
				break;
			case PLAYER_2_WINS:
				System.out.println("You lost!");
				break;
			case DRAW:
				System.out.println("It's a draw");
				break;
			
		}
		
	}
	
	private GameStatus gameStatus() {
		if(board.hasPlayerWon("X")) {
			return GameStatus.PLAYER_1_WINS;
		}
		else if(board.hasPlayerWon("O")) {
			return GameStatus.PLAYER_2_WINS;
		}
		else if(board.isDraw()) {
			return GameStatus.DRAW;
		}
		else {
			return GameStatus.GAME_ONGOING;
		}
	}
	
}
